{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "ES2022",
        "allowJs": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "strict": true,
        "noImplicitOverride": true,
        "module": "ESNext",
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "types": [
            "vitest"
        ]
    },
    "type": "module"
}